             Logo (221px wide)
          a(href='/',data-bypass)
            img#logo(src='images/logo.png', alt='Vitality Admin logo')
          //
             Sidebar Profile links
          #profile-links

          ul#main-nav
            //
               Accordion Menu
            li
              a.nav-top-item.current(href='admin/showcases')  展示厅
              ul
                li
                  a.current(href='admin/showcases') 管理
                li
                  a(href='admin/showcases/add') 创建
            li
              a.nav-top-item(href='admin/cakes')  专栏
              ul
                li
                  a(href='admin/cakes') 管理
                li
                  a(href='admin/cakes/add') 创建
            li
              a.nav-top-item(href='admin/topics')
                | 页面
              ul
                li
                  a(href='admin/topics') 管理
                li
                  a(href='admin/topics/add') 创建
            li
              a.nav-top-item  系统
              ul
                li
                  a(href='logout') 退出
          //
             End #main-nav
          #messages(style='display: none;')
